#!/usr/bin/env bash

SEARCH_PATHS=("$HOME/Projects" "$HOME/code")
SPECIFIC_PATHS=("$HOME/.dotfiles")

# Collect all directories
all_dirs=()

# Add first-level directories from SEARCH_PATHS
for search_path in "${SEARCH_PATHS[@]}"; do
  if [[ -d "$search_path" ]]; then
    for dir in "$search_path"/*; do
      if [[ -d "$dir" ]]; then
        all_dirs+=("$dir")
      fi
    done
  fi
done

# Add SPECIFIC_PATHS
for specific_path in "${SPECIFIC_PATHS[@]}"; do
  if [[ -d "$specific_path" ]]; then
    all_dirs+=("$specific_path")
  fi
done

# Sort directories by last access time (most recent first)
# Create temporary file to store directory names with their access times
temp_file=$(mktemp)
for dir in "${all_dirs[@]}"; do
  # Get access time in seconds since epoch
  atime=$(stat -f "%a" "$dir" 2>/dev/null || echo "0")
  echo "$atime $dir" >> "$temp_file"
done

# Sort by access time (descending) and extract directory names
sorted_dirs=()
while IFS= read -r line; do
  # Extract directory name (everything after the first space)
  dir_name="${line#* }"
  sorted_dirs+=("$dir_name")
done < <(sort -nr "$temp_file")

# Clean up temporary file
rm "$temp_file"

# Use fzf to select a directory
selected_dir=$(printf '%s\n' "${sorted_dirs[@]}" | fzf --prompt="Select project: ")

# Exit if nothing was selected
if [[ -z "$selected_dir" ]]; then
  exit 0
fi

# Create session name from directory basename
session_name=$(basename "$selected_dir")

# Change to session
if [[ -v "$ZELLIJ" ]]; then
  # if we are in a zellij sesssion
  zellij pipe --plugin https://github.com/mostafaqanbaryan/zellij-switch/releases/download/0.2.1/zellij-switch.wasm -- "--session $session_name --cwd $selected_dir"
else
  # if we are not in a zellij session
  zellij attach "$session_name" --create
fi
